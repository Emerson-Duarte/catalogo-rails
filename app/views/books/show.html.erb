<div class="header">
  <%= link_to 'CATALOG', root_path %>
  <div class="button-header">
    <%= link_to 'New Book', new_book_path %>
  </div>
</div>
<div class="content-show">
  <div class="elegant-aero-show">

    <div>
      <strong>Title:</strong>
      <label><%= @book.title %></label>

    </div>

    <div>
      <strong>Synopsis:</strong>
      <textarea><%= @book.synopsis %></textarea>
    </div>

    <div>
      <strong>Genre:</strong>
      <label><%= @book.genre.description %></label>
    </div>

    <div>
      <strong>Value:</strong>
      <label><%= value_formatted(@book.value) %></label>
    </div>

    <div>
      <strong>Pages:</strong>
      <label><%= @book.page %></label>
    </div>

    <div class="button-edit"><%= link_to 'Edit', edit_book_path(@book) %></div>

  </div>

</div>